<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/bg_check_item_top">

                <TextView
                    android:id="@+id/tv_hospital"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="15sp"
                    android:layout_marginLeft="14dp"
                    android:textColor="@color/black_333333"
                    android:text="安徽省儿童医院"/>

                <TextView
                    android:id="@+id/tv_equipment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="15sp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="14dp"
                    android:textColor="@color/black_333333"
                    android:text="诊间屏"/>
                
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="horizontal"
                android:paddingTop="14dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp">

                <com.yuantu.zxing.common.widget.CircleProgressIndicator
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginRight="30dp"
                    android:layout_height="match_parent" />

                <com.yuantu.zxing.common.widget.CircleProgressIndicator
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginRight="30dp"
                    android:layout_height="match_parent" />

                <com.yuantu.zxing.common.widget.CircleProgressIndicator
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginRight="30dp"
                    android:layout_height="match_parent" />

                <com.yuantu.zxing.common.widget.CircleProgressIndicator
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginTop="18dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="15sp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="14dp"
                    android:textColor="@color/black_333333"
                    android:layout_gravity="center_vertical"
                    android:text="进度"/>

                <com.yuantu.zxing.common.widget.LinearProgressIndicator
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="15dp"
                android:background="@color/divide_EEEEEE"/>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="开始时间：2019-05-27 11:42:20"
                android:gravity="center_vertical"
                android:textColor="@color/black_666666"
                android:paddingLeft="14dp"
                />

        </LinearLayout>


    </android.support.v7.widget.CardView>

</FrameLayout>